{% if section.settings.video_url != blank %}
  <video controls>
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
{% endif %}

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "url",
        "id": "video_url",
        "label": "Video URL",
        "info": "Must be an MP4."
      }
    ],
    "presets": [
      {
        "name": "Video",
        "category": "Custom Content"
      }
    ]
  }
{% endschema %}
