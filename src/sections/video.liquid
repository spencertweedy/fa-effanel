{% if section.settings.video_url != blank %}
  <video class="video-embed" controls{% if section.settings.video_poster != blank %} poster="{{ section.settings.video_poster | img_url: '1200x' }}"{% endif %}>
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
{% endif %}

{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "type": "url",
        "id": "video_url",
        "label": "Video URL",
        "info": "Must be an MP4."
      },
      {
        "type": "image_picker",
        "id": "video_poster",
        "label": "Video poster image"
      }
    ],
    "presets": [
      {
        "name": "Video",
        "category": "Custom Content"
      }
    ]
  }
{% endschema %}
